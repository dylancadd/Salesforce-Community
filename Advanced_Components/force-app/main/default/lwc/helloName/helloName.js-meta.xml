<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="anotherComponent">
    <apiVersion>48.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Current User Greeting</masterLabel>
    <description>Add a classic greeting to any page.</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
      <targetConfig targets="lightning__AppPage">
          <property name="startingText" type="String" label="Starting Text" placeholder="Welcome back, " description="Enter text before name."/>
          <property name="endingText" type="String" label="Ending Text" placeholder=".  Have a look around" description="Enter text after name"/>
      </targetConfig>
    </targetConfigs>
</LightningComponentBundle>